<% provide(:name, "employee") %>
<% provide(:title, "Edit Details") %>
<div class= "container">
<div class="col-md-4 emp_update">
  <% if @employee.fb.nil? || @employee.fb == 'f' %>
    <%= link_to '<i class="fa fa-facebook-official font-awesome" aria-hidden="true"></i><b>etch data from facebook</b>'.html_safe,
                                                  '/auth/facebook', class: 'btn btn-primary'%>
    <% @employee.update_attributes(fb: true) %>
  <% else %>
    <%= link_to '<i class="fa fa-facebook-official font-awesome" aria-hidden="true"></i><b>acebook Logout</b>'.html_safe,
                                                  '/auth/facebook', class: 'btn btn-primary' %>
    <% @employee.update_attributes(fb: false)%>
  <% end %>
  <div>
    <h3 class="text-center">Employee Update</h3>
  </div>

  <%= form_for(@employee, url: employeeportal_path(:id => @employee.id), method: :patch) do |f| %>
    <%= render 'shared/error_messages', object: @employee %>
        
    <% if f.object.picture? %>
      <%= image_tag @employee.picture.thumb.url %>
    <% else %>
      <span>
        <%= gravatar_for (@employee) %>
      </span>
    <% end %>
    <div>
      <div>
        <div><%= f.label :picture %>:</div>
        <div>
          <%= f.file_field :picture %>
        </div>
                
        <div>
          <%= f.label :id %>:                      
          <%= f.text_field :id, :value => ("RP_#{@employee.id}"), :disabled => true, class: "form-control" %>
        </div>
                
        <div><%= f.label :name %>:                      
          <%= f.text_field :name, :disabled => true, class: "form-control" %>
        </div>

        <div>
          <%= f.label :gender %>:
          <%= f.text_field :gender, :disabled => true, class: "form-control" %>
        </div>                    
                
        <div>
          <%= f.label :designation %>:
          <%= f.text_field :designation, :disabled => true, class: "form-control" %>
        </div>

        <div>
          <%= f.label :phone %><sup>*</sup>:
          <%= f.text_field :phone, class: "form-control" %>
        </div>

        <div>
          <%= f.label :email %>:
          <%= f.email_field :email, :disabled => true, class: "form-control" %>
        </div>

        <div>
          <%= f.label :personal_email %><sup>*</sup>:
          <%= f.email_field :personal_email, class: "form-control" %>
        </div>

        <div>
          <%= f.label :date_of_join %>:
          <%= f.date_field :date_of_join, :disabled => true, class: "form-control" %>
        </div>

        <div>
          <%= f.label :date_of_birth %>:
          <%= f.date_field :date_of_birth, :disabled => true, class: "form-control" %>
        </div>

        <div>
          <%= f.label :address %><sup>*</sup>:
          <%= f.text_area :address, class: "form-control" %>
        </div>

        <div>
          <%= f.label :active %>:
          <%= f.check_box :active, :disabled => true %>
        </div>

        <div>
          <%= f.label :username %>:
          <%= f.text_field :username, :disabled => true, class: "form-control" %>
        </div>

      </div>
      <br />
      <div>
        <%= f.submit "Update", class: "btn btn-lg btn-success col-sm-12 col-xs-12" %>
      </div>
    </div>
</div>

<div class = "col-md-4 emp_update float-right">
  <% if @employee.fb == 'f' %>
    <div>
      <h3 class = "text-center">Facebook Details</h3>
    </div>
      <div>
        <% if @employee.fb_picture %>
        <b>Profile Pic:</b>
        <div>
            <%= image_tag @employee.fb_picture %>
          </div>
        <% end %>
      </div>
    <div>
      <b>Name: </b>
      <%= f.text_field :fb_name, disabled: true, class: "form-control" %>
    </div>
    <div>
      <% if @employee.fb_birthday %>
        <b>Birthday: </b>
        <%= f.text_field :fb_birthday, disabled: true, class: "form-control" %>
      <% end %>
    </div>
    <div>
      <% if @employee.fb_email %>
        <b>Email: </b>
        <%= f.text_field :fb_email, disabled: true, class: "form-control" %>
      <% end %>
    </div>
    <div>
      <% if @employee.fb_hometown %>
        <b>Hometown: </b>
        <%= f.text_field :fb_hometown, disabled: true, class: "form-control" %>
      <% end %>
    </div>
    <div>
      <% if @employee.fb_location %>
        <b>Location: </b>
        <%= f.text_field :fb_location, disabled: true, class: "form-control" %>
      <% end %>
    </div>
    <div>
      <% if @employee.fb_posts %>
        <b>Last Post: </b>
        <%= f.text_area :fb_posts, disabled: true, class: "form-control" %>
      <% end %>
    </div>
  <% end %>
  <% end %>
</div>
</div>